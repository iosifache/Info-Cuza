[{"id":"1111","titlu":"Siruri de caractere","tip":"1","materie":"1","descriere":"Un sir de caractere este, in mod traditional, o secventa de caractere declarata ca o constanta sau ca o variabila. Aceasta din urma permite elementelor sale sa fie mutate, modificate si sa i se modifice lungimea. String-urile, asa cum mai sunt numite, reprezinta de fapt vectori ce retin pe pozitiile lor codurile ASCII ale caracterelor.","timp":"60"}, {"id":"1201","titlu":"Pagini web","tip":"1","materie":"2","descriere":"O pagina web este o resursa aflata in spatiul web din Internet, de obicei in format HTML si avand hyperlinkuri pentru navigarea simpla de la o pagina sau sectiune de pagina la alta. Pagina web se numeste astfel deoarece ea se poate afisa pe un monitor sau ecran de calculator si se aseamana intr-o oarecare masura cu o pagina de ziar.","timp":"60"}, {"id":"2111","titlu":"Siruri de caractere","tip":"2","materie":"1","descriere":"Un sir de caractere este, in mod traditional, o secventa de caractere declarata ca o constanta sau ca o variabila. Aceasta din urma permite elementelor sale sa fie mutate, modificate si sa i se modifice lungimea. String-urile, asa cum mai sunt numite, reprezinta de fapt vectori ce retin pe pozitiile lor codurile ASCII ale caracterelor.","timp":"30"}, {"id":"2201","titlu":"Pagini web","tip":"2","materie":"2","descriere":"O pagina web este o resursa aflata in spatiul web din Internet, de obicei in format HTML si avand hyperlinkuri pentru navigarea simpla de la o pagina sau sectiune de pagina la alta. Pagina web se numeste astfel deoarece ea se poate afisa pe un monitor sau ecran de calculator si se aseamana intr-o oarecare masura cu o pagina de ziar.","timp":"30"}]

